        "schemas": {
            "criarCobrança": {
                "type": "object",
                "properties": {
                    "cobranca": {
                        "type": "string",
                        "example": "Academia"
                    },
                    "vencimento": {
                        "type": "string",
                        "example": "07/09/2022"
                    },
                    "valor": {
                        "type": "string",
                        "example": "100.0"
                    },
                    "situacao": {
                        "type": "string",
                        "example": "Pendente"
                    }
                }
            },
            "Cobrança": {
                "type": "object",
                "properties": {
                    "cobranca": {
                        "type": "string",
                        "example": "Academia"
                    },
                    "vencimento": {
                        "type": "string",
                        "example": "07/09/2022"
                    },
                    "valor": {
                        "type": "string",
                        "example": "100.0"
                    },
                    "situacao": {
                        "type": "string",
                        "example": "Pendente"
                    }
                }
            },
            "saldo": {
                "type": "object",
                "properties": {
                    "nome": {
                        "type": "string",
                        "example": "Cabral"
                    },
                    "saldo": {
                        "type": "string",
                        "example": "1020.00"
                    }
                }
            },
            "login": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string",
                        "example": "Felipe"
                    },
                    "password": {
                        "type": "string",
                        "example": "12345678"
                    }
                }
            }
